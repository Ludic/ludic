{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist/",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "paths": {
      "@src/*" : ["src/*"],
      "@dist/*" : ["dist/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": ["./src/**/*"]
}
