{
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "target": "ES2019",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "paths": {
      "@src/*" : ["../src/*"],
      "@dist/*" : ["../dist/*"],
      "@tests/*": ["../tests/*"]
    }
  },
  "include": ["../src/**/*","../tests/**/*.spec.ts"]
}
